@model Badzeet.Web.Features.Book.EditModel

@{
    ViewData["Title"] = "EditRecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form method="post" asp-controller="Book" asp-action="EditRecord">
    <div class="form-group row">
        <label asp-for="Transaction.Date" class="col-sm-2 col-form-label">Date</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Transaction.Date" type="date" />
        </div>
    </div>

    <input id="id" asp-for="Transaction.Id" type="hidden" />

    <div class="form-group row">
        <label asp-for="Transaction.Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Transaction.Description" type="text" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Transaction.Amount" class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Transaction.Amount" step="0.01" type="number" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Transaction.CategoryId" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <select class="custom-select"
                    asp-for="Transaction.CategoryId"
                    asp-items="@(new SelectList(Model.Categories,"Id","Name"))">
                <option>Please select one</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary form-control">Save</button>
        </div>
    </div>
</form>

<div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-danger form-control">Remove</button>
    </div>
</div>