@model Badzeet.Web.Features.Categories.CategoryController.CategoryViewModel
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" type="text" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Order" class="col-sm-2 col-form-label">Order</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Order" type="number" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="InSummary" class="col-sm-2 col-form-label">Show in Summary</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="InSummary" type="checkbox" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary form-control">Save</button>
        </div>
    </div>
</form>

<form asp-action="Remove" method="post">
    <div class="row">
        <div class="offset-sm-2 col-sm-10">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger form-control" id="removeBtn">Remove</button>
        </div>
    </div>
</form>

<script type="text/javascript">
    function registerEvent() {
        var link = document.getElementById("removeBtn");
        link.addEventListener("click", function (event) {
            var result = confirm("Are you sure?");
            if (result == false) {
                event.preventDefault();

            }
            //form.submit();
        });
    }
    window.onload = registerEvent();
</script>