@model Badzeet.Web.Features.Categories.CategoryController.CategoryViewModel
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Category</h1>

<form asp-action="New" method="post">

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" type="text" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Order" class="col-sm-2 col-form-label">Order</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Order" type="number" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary form-control">Save</button>
        </div>
    </div>
</form>