@model Badzeet.Web.Features.UserAccounts.UserAccountController.UserAccountViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form method="post" asp-action="Edit">
    <input id="userId" asp-for="UserId" type="hidden"/>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" type="text"/>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary form-control">Save</button>
        </div>
    </div>
</form>