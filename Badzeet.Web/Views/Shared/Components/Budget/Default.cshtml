@model Badzeet.Web.Features.Budget.BudgetViewComponent.BudgetViewModel
<div class="card mb-4">
    <h5 class="card-header bg-primary text-white">
        Budget
    </h5>
    <div class="card-body">
        <table class="table table-sm">
            <tr>
                <th colspan="2"></th>

                <th>Spent</th>
                <th>Planned</th>
            </tr>
            @foreach (var category in Model.Categories.Where(x => (x.Budget != 0 || x.Total != 0)))
            {
                <tr data-toggle="collapse" data-target="#@category.Name">
                    <th colspan="2">
                        <a class="btn btn-link" href="/Payments/List?cid=@(category.Id)&from=@Model.Interval.From.ToString("yyyy-MM-dd")&to=@Model.Interval.To.ToString("yyyy-MM-dd")">@category.Name</a>
                    </th>
                    <th>@category.Total.ToString("F0")</th>
                    <th>@category.Budget.ToString("F0")</th>
                </tr>

                @foreach (var u in category.Users)
                {
                    <tr id="@category.Name" class="collapse">
                        <td></td>
                        <td>
                            @u.Total.ToString("F0")
                        </td>
                        <td>
                        </td>
                    </tr>
                }
            }
        </table>
        <a class="btn btn-primary form-control" asp-action="Edit" asp-route-budgetId="@Model.BudgetId">Edit</a>
    </div>
</div>