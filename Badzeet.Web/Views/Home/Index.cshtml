@model Badzeet.Web.Features.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Badzeet</h1>

    @if (Context.User.Identity.IsAuthenticated == false)
    {

        <h2>Login</h2>
        <partial name="/Views/Account/_Login.cshtml" />
        <text>
            Want to use it? Register <a asp-controller="Account" asp-action="Register">here</a>. It's <b>free</b>!
        </text>

        <p class="mt-5">
            For demo login click <a id="myLink" href="/" onclick="demoLogIn">here</a>
        </p>
        <p>or</p>
        <p>login using <code>bob/bob</code></p>
    }
</div>
@if (Context.User.Identity.IsAuthenticated == false)
{
    <script type="text/javascript">
        function registerEvent() {
            var link = document.getElementById("myLink");
            link.addEventListener("click", function (event) {
                event.preventDefault();
                var username = document.getElementById("username");
                var password = document.getElementById("password");
                var form = document.getElementById("loginForm");

                username.value = "bob";
                password.value = "bob";
                form.submit();
            });
        }
        window.onload = registerEvent();
    </script>
}
else
{
    <p>@Model.Interval.From.ToString("yyyy-MM-dd") - @Model.Interval.To.ToString("yyyy-MM-dd")</p>
    
    <table class="table table-sm">
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Amount</td>
            </tr>
        }
        <tr>
            <td>Sum</td>
            <td><b>@Model.Categories.Sum(x => x.Amount)</b></td>
        </tr>
    </table>
}