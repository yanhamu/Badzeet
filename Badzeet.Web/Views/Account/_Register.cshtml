<form method="post"
      asp-controller="Account"
      asp-action="Register"
      asp-route-returnurl="/">

    <div class="form-group row">
        <label for="username" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input id="username" class="form-control" name="username" value="bob" type="text" />
            <small id="usernameHelpBlock" class="form-text text-muted text-left">
                Use your username or email. You won't be able to change it later.
            </small>
        </div>
    </div>

    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input id="password" class="form-control" name="password" value="bob" type="password" />
        </div>
    </div>

    <div class="form-group row">
        <label for="invitationId" class="col-sm-2 col-form-label">Invitation</label>
        <div class="col-sm-10">
            <input id="invitationId" class="form-control" name="invitationId" type="text" value="@ViewData["invitationId"]" />
            <small id="invitationIdHelpBlock" class="form-text text-muted text-left">
                If you want to use shared budget, ask for invitation.
            </small>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary form-control">Register</button>
        </div>
    </div>
</form>